<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="general">
		<field name="fullname"
               type="text"
               label="JGLOBAL_FULLNAME"
               description="COM_INSURANCE_FULLNAME_DESC"
               class="inputbox"
               size="30"
               required="true"
        />
		
		<field id="published"
               name="published"
               type="list"
               label="JGLOBAL_STATE"
               description="JFIELD_PUBLISHED_DESC"
               class="inputbox"
               size="1"
               default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>			
        </field>
		<field name="id"
               type="text"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               size="10"
               default="0"
               readonly="true"
               class="readonly"
        />
		<field name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time"
			type="hidden"
			filter="unset"
		/>
        <field name="email" type="text" label="COM_INSURANCE_EMAIL_LABEL" description="COM_INSURANCE_EMAIL_DESC"   />
		<field name="phone" type="text" label="COM_INSURANCE_PHONE_LABEL" description="COM_INSURANCE_PHONE_DESC"   />
	    <field name="availability" type="calendar" label="COM_INSURANCE_AVAILABILITY_LABEL" description="COM_INSURANCE_AVAILABILITY_DESC" format="%Y-%m-%d %H:%M:%S" singleheader="true" showtime="true" translateformat="true" timeformat="12" todaybutton="true" weeknumbers="true" filltable="true"   />
		<field name="image" type="media" label="COM_INSURANCE_IMAGE_LABEL" description="COM_INSURANCE_IMAGE_DESC"  />
    </fieldset>
	
</form>